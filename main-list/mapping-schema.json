{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "uri": {
      "type": "string",
      "format": "uri",
      "pattern": "^(https?|http?)://"
    }
  },
  "type": "object",
  "required": [
    "projects"
  ],
  "properties": {
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
            "name": {
                "description": "The name of the project.",
                "type": "string"
            },
            "source": {
                "description": "The URL of the project's codemeta or source meta data.",
                "$ref": "#/$defs/uri"
            },
            "fields": {
                "type": "object",
                "description": "A mapping of arbitrary field names to jq-like expressions.",
                "additionalProperties": {
                    "type": "string",
                    "description": "An expression (e.g., jq path) for extracting data."
                }
            }
        },  
        "required": [
          "name",
          "source"
        ]
      }
    }
  }
}
